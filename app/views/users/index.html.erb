
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>Table</title>
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" type="text/css"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>
<body>

<a href="<%= url_for(controller: 'dashboard', action: 'index') %>" style="text-decoration:none; text-align: justify;">&#x2190; Back</a>

<div class="container">
<% if flash[:notice].present? %>
    <strong class="text-success mt-3"><%= flash[:notice] %></strong>
<% else flash[:warning].present? %>
    <strong class="text-danger mt-3"><%= flash[:warning] %></strong>
<% end %>
    <h1>All Employees Details</h1>
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <tr class="table-header">
                    <th class="font-weight-bold text-xl">Name</th>
                    <th class="font-weight-bold text-xl">Email</th>
                    <th class="font-weight-bold text-xl">Phone</th>
                    <th class="font-weight-bold text-xl">Address</th>
                    <th class="font-weight-bold text-xl">Role</th>
                </tr>
                <% if @users.present? %>
                    <% @users.each do |user| %>
                    <tr  class="active">
                        <td class="text-lg"><%= user.name %></td>
                        <td class="text-lg"><%= user.email %></td>
                        <td class="text-lg"><%= user.phone %></td>
                        <td class="text-lg"><%= user.address %></td>
                        <td class="text-lg"><%= user.role %></td>
                        <td class="text-lg"><span>
                            <a href='<%= url_for(controller: "users", action: "edit", email:user.email, id:user.id ) %>'><i class="fa fa-edit" style="font-size:24px" ></i></a>
                        </span>
                        <span><a href='<%= url_for(controller: "appointments", action: "delete", email:user.email, id:user.id ) %>'><i class="fa fa-trash" style="font-size:24px; color:red"></i><span>
                        </td>
                    </tr>
                    <% end %>

                <% else %>
                <div class="alert alert-info text-danger">
                    Oops, No data found!!
                </div>
                <% end %>

            </table>
        </div>
    </div>
</div>
</body>
</html>