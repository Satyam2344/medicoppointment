<% if session[:user].blank? %>
    <%= javascript_tag "window.location.href = '/'" %>
<% else %>
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
<body>
<div class="container-fluid col-lg-6">
<a href="<%= url_for(controller: 'users', action: 'index') %>" style="text-decoration:none;">&#x2190; Back</a>
<% if flash[:notice].present? %>
      <strong class="text-danger"><%= flash[:notice] %></strong>
<% end %>
      <form class="form-group" action="<%= url_for(controller: 'users', action: 'update') %>" method="post">
      <%= token_tag(nil) %>
        <h2>Update employee's informations:</h2>
        <div class="form-group">
          <label for="name">user Name</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="<%= @user.name %>" value="<%= @user.name %>" required/>
          <span class="help-block"></span>
        </div> 
        <div class="form-group">
          <label for="email_address">Email Address</label>
          <input type="email" name="email" class="form-control" id="email_addr" placeholder="<%= @user.email %>" value="<%= @user.email %>" readonly required/>
          <span class="help-block"></span>
        </div>
    
        <div class="form-group">
          <label for="phone_number">Phone Number</label>
          <input type="phone" name="phone" class="form-control" id="phone_number" placeholder="<%= @user.phone %>" value="<%= @user.phone %>" required/>
          <span class="help-block"></span>
        </div>

        <div class="form-group">
          <label for="address">address</label>
          <input type="text" class="form-control" name="address" id="address" placeholder="<%= @user.address %>" value="<%= @user.address %>" required/>
          <span class="help-block"></span>
        </div> 

         <div class="form-group">
          <label for="role">Role</label>
          <select class="form-control" name="role" id="role" required>
            <option value="">Select Role</option>
            <option value="doctor">doctor</option>
            <option value="receptionist">receptionist</option>
          </select>
          <span class="help-block"></span>
        </div> 
        <input type="hidden" class="form-control" name="id" id="id" placeholder="<%= @user.id %>" value="<%= @user.id %>">
        
        <button class="btn btn-lg btn-primary btn-block" type="submit">Make appointment</button>
      </form>

    </div> <!-- /container -->
</body>
<% end %>